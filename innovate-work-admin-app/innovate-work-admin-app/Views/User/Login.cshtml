<div class="page-container">
    <h3 class="form-title">Login form</h3>
    <div class="contact-form">
        <form asp-action="Authenticate" asp-controller="User" class="data-entrance" id="validation-form">
            
            <div class="form-group">
                <input id="usernameInput" type="text" name="username" placeholder="Username *" autocomplete="off" required />
                <small class="error-message" style="color: red"></small>
            </div>
            <div class="form-group">
                <input id="passwordInput" type="password" name="password" placeholder="SomePassword1234_ *" autocomplete="off" required />
                <small class="error-message" style="color: red"></small>
            </div>

            <button type="submit" class="submit-button">Login</button>
        </form>
    </div>
</div>

